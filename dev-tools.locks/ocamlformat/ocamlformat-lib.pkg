(version 0.28.1)

(build
 (progn
  (when
   %{pkg-self:dev}
   (run dune subst))
  (run dune build -p %{pkg-self:name} -j %{jobs} @install)))

(depends
 ocaml
 base
 cmdliner
 dune
 dune-build-info
 either
 fix
 fpath
 menhir
 menhirLib
 menhirSdk
 ocaml-version
 ocp-indent
 stdio
 uuseg
 uutf
 csexp
 astring
 camlp-streams)

